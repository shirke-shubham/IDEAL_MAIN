{
  "name": "DEALER_PORTAL",
  "version": "1.0.0",
  "description": "A simple CAP project.",
  "repository": "<Add your repository here>",
  "license": "UNLICENSED",
  "private": true,
  "dependencies": {
    "@cap-js-community/odata-v2-adapter": "^1.11.6",
    "@sap-cloud-sdk/core": "^1.54.2",
    "@sap-cloud-sdk/resilience": "^3.12.0",
    "@sap-cloud-sdk/http-client": "3.12.0",
    "@sap/cds": "^7.3.1",
    "@sap/cds-hana": "^2",
    "@sap/hana-client": "^2.19.21",
    "@sap/hdbext": "^7.7.6",
    "express": "^4",
    "nodemailer": "^6.9.7",
    "passport": "^0.6.0",
    "sap-hdbext-promisfied": "2.202307.1"
  },
  "devDependencies": {
    "@sap/cds-dk": "^7",
    "@sap/hdi-deploy": "4.8.2"
  },
  "scripts": {
    "start": "cds-serve"
  },
  "cds": {
    "requires": {
      "connectivity": true,
      "db": "hana",
      "auth": {
        "kind": "mocked"
      },
      "ZIDL_CUSTOMER_REG_SRV": {
        "kind": "odata-v2",
        "model": "srv/external/ZIDL_CUSTOMER_REG_SRV",
        "csrf": true,
        "csrfInBatch": true,
        "credentials": {
          "destination": "iDeal_S4HANA",
          "path": "/sap/opu/odata/sap/ZIDL_CUSTOMER_REG_SRV/",
          "forwardAuthToken": true,
          "timeout": 100000
        }
      },
      "ZMDG_CUSTOMER_REG_SRV": {
        "kind": "rest",
        "model": "srv/external/ZMDG_CUSTOMER_REG_SRV",
        "csrf": true,
        "csrfInBatch": true,
        "credentials": {
          "destination": "iDeal_S4HANA",
          "path": "/sap/opu/odata/sap/ZMDG_CUSTOMER_REG_SRV/"
        }
      },
      "ZIBS_SALES_ORDER_CREATION_SRV": {
        "kind": "rest",
        "model": "srv/external/ZIBS_SALES_ORDER_CREATION_SRV",
        "csrf": true,
        "csrfInBatch": true,
        "credentials": {
          "destination": "iDeal_S4HANA",
          "path": "/sap/opu/odata/sap/ZIBS_SALES_ORDER_CREATION_SRV/"
        },
        "[production]": {
          "credentials": {
            "destination": "iDeal_S4HANA",
            "path": "/sap/opu/odata/sap/ZIBS_SALES_ORDER_CREATION_SRV"
          }
        }
      },
      "ZIBS_DMS_CLAIM_SRV": {
        "kind": "rest",
        "model": "srv/external/ZIBS_DMS_CLAIM_SRV",
        "csrf": true,
        "csrfInBatch": true,
        "credentials": {
          "destination": "iDeal_S4HANA",
          "path": "/sap/opu/odata/sap/ZIBS_DMS_CLAIM_SRV/"
        },
        "[production]": {
          "credentials": {
            "destination": "iDeal_S4HANA",
            "path": "/sap/opu/odata/sap/ZIBS_DMS_CLAIM_SRV"
          }
        }
      },
      "ZIBS_DMS_PAYMENT_SRV": {
        "kind": "rest",
        "model": "srv/external/ZIBS_DMS_PAYMENT_SRV",
        "csrf": true,
        "csrfInBatch": true,
        "credentials": {
          "destination": "iDeal_S4HANA",
          "path": "/sap/opu/odata/sap/ZIBS_DMS_PAYMENT_SRV"
        }
      },
      "destinations": true,
      "ZIBS_DMS_RGA_SRV": {
        "kind": "rest",
        "model": "srv/external/ZIBS_DMS_RGA_SRV",
        "csrf": true,
        "csrfInBatch": true,
        "credentials": {
          "destination": "iDeal_S4HANA",
          "path": "/sap/opu/odata/sap/ZIBS_DMS_RGA_SRV"
        }
      },
      "IAS_DEST": {
        "kind": "rest",
        "credentials": {
          "destination": "IAS_DEST",
          "path": "/scim"
        }
      }
    },
    "hana": {
      "deploy-format": "hdbtable"
    },
    "cov2ap": {
      "plugin": true
    }
  }
}